{
	"extends": "@mimir/tsconfig/base.json",
	"include": ["src"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"baseUrl": ".",
		"verbatimModuleSyntax": true,
		"module": "esnext",
		"moduleResolution": "bundler",

		"paths": {
			"@db/*": ["./src/*"],
			"@api/*": ["../../apps/api/src/*"],
			"@integration/*": ["../integration/src/*"]
		}
	}
}
